{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./dist",
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"]
}
